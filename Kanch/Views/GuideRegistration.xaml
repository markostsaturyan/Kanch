<UserControl x:Class="Kanch.Views.GuideRegistration"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kanch"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="23"/>
            <RowDefinition Height="23"/>
            <RowDefinition Height="23"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="222" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row = "0" Grid.Column = "0"  HorizontalAlignment = "Left" Name = "textBlockProfession" Text = "Profession:" VerticalAlignment = "Top" Width = "110" />
        <TextBox Grid.Row = "0" Grid.Column = "1" HorizontalAlignment = "Left"  Name = "textBoxProfession" VerticalAlignment = "Top" Width = "222" Text="{Binding Path = GuideViewModel.Profession, Mode=TwoWay}"/>

        <TextBlock Grid.Row = "1" Grid.Column = "0"  HorizontalAlignment = "Left" Name = "textBlockEducationGrade" Text = "Education grade:" VerticalAlignment = "Top" Width = "110" />
        <TextBox Grid.Row = "1" Grid.Column = "1" HorizontalAlignment = "Left"  Name = "textBoxEducationGrade" VerticalAlignment = "Top" Width = "222" Text="{Binding Path = GuideViewModel.EducationGrade, Mode=TwoWay}"/>
        
        <TextBlock Grid.Row = "2" Grid.Column = "0"  HorizontalAlignment = "Left" Name = "textBlockWorkExperience" Text = "Work experience" VerticalAlignment = "Top" Width = "110" />
        <TextBox Grid.Row = "2" Grid.Column = "1" HorizontalAlignment = "Left"  Name = "textBoxWorkExperience" VerticalAlignment = "Top" Width = "222" Text="{Binding Path = GuideViewModel.WorkExperience, Mode=TwoWay}"/>

        <TextBlock Grid.Row = "3" HorizontalAlignment = "Left" Name = "textBlockKnowledgesOfLanguages" Text = "Languages:" VerticalAlignment = "Top" />
        <ListBox Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" Name="listBoxLanguages"
             ItemsSource="{Binding Path=GuideViewModel.Languages}"
             VerticalAlignment="Top">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox Content="{Binding Text}"
                     IsChecked="{Binding Path=IsSelected, Mode=TwoWay}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBlock Grid.Row="4" HorizontalAlignment="Left" Name="textBlockPlaces" Text="Places you can guide:" VerticalAlignment="Top" />
        <StackPanel Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBox Name="textBoxPlaces" Width="172" Text="{Binding Path=GuideViewModel.InputPlace,Mode=TwoWay}" />
                <Button Name="addAPlace" Width="50" Command="{Binding Path = GuideViewModel.InputPlaceCommand}">Add</Button>
            </StackPanel>
            <ListBox  Name="listBoxPlaces" ItemsSource="{Binding Path=GuideViewModel.Places}" >
            </ListBox>
        </StackPanel>
    </Grid>
</UserControl>
