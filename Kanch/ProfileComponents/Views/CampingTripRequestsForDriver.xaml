<UserControl x:Class="Kanch.ProfileComponents.Views.CampingTripRequestsForDriver"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kanch.ProfileComponents.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListView Name="requestsList" ItemsSource="{Binding CampingTripRequests}" ScrollViewer.CanContentScroll="True">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="50" Header="Place" DisplayMemberBinding="{Binding Place}"/>
                    <GridViewColumn Width="90" Header="Departure date" DisplayMemberBinding="{Binding DepartureDate}"/>
                    <GridViewColumn Width="70" Header="Arrival date" DisplayMemberBinding="{Binding ArrivalDate}"/>
                    <GridViewColumn Width="50" Header="Min age" DisplayMemberBinding="{Binding MinAge}" />
                    <GridViewColumn Width="50" Header="Max age" DisplayMemberBinding="{Binding MaxAge}" />
                    <GridViewColumn Width="128" Header="Max count of members" DisplayMemberBinding="{Binding MaxCountOfMembers}" />
                    <GridViewColumn Width="128" Header="Min count of members" DisplayMemberBinding="{Binding MinCountOfMembers}" />
                    <GridViewColumn Width="80" Header="Direction" DisplayMemberBinding="{Binding Direction}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <ListView ItemsSource="{Binding Direction}" ScrollViewer.CanContentScroll="True">
                                </ListView>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Width="70" Header="Type of trip" DisplayMemberBinding="{Binding TypeOfTrip}">
                    </GridViewColumn>
                    <GridViewColumn />
                    <GridViewColumn Width="50"  DisplayMemberBinding="{Binding Accept}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Hyperlink Command="{Binding Accept}" CommandParameter="{Binding}" >Accept</Hyperlink>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Width="50" DisplayMemberBinding="{Binding Ignore}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Hyperlink Command="{Binding Ignore}" CommandParameter="{Binding}">
                                    Ignore
                                </Hyperlink>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>

            </ListView.View>

