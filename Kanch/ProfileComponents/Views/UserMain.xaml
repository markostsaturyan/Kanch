<UserControl x:Class="Kanch.ProfileComponents.Views.UserMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kanch.ProfileComponents.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="180">
    
    <Grid>

        <StackPanel Orientation="Vertical">

            <Image Source="{Binding Path = User.Image}" Height="50" Width="50" ></Image>

            <TextBlock Text="{Binding Path = User.FirstName}" Margin="0,10,0,5"/>

            <TextBlock Text="{Binding Path = User.LastName}"/>

            <TextBlock HorizontalAlignment="Center">
            <Hyperlink Command="{Binding Path = GetAllTripsCommand}">See all the trips</Hyperlink>
            </TextBlock>

            <TextBlock HorizontalAlignment="Center" Margin="10">
            <Hyperlink Command="{Binding Path = GetMyCurrentTripsCommand}" >See my current campaigns</Hyperlink>
            </TextBlock>

            <TextBlock HorizontalAlignment="Center">
            <Hyperlink Command="{Binding Path = GetlMyPreviousTripsCommand}" >See my previous trips</Hyperlink>
            </TextBlock>

        </StackPanel>

    </Grid>
    
</UserControl>
