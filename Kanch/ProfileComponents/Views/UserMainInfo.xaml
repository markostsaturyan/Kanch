<UserControl x:Class="Kanch.ProfileComponents.Views.UserMainInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kanch.ProfileComponents.Views"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="180">
    
    <Grid>

        <StackPanel Orientation="Vertical">

            <Image Name="userPicture" Source="{Binding Path = User.Image}" Height="50" Width="50" ></Image>

            <TextBlock Name="firstName" Text="{Binding Path = User.FirstName}" Margin="0,10,0,5"/>
         
            <TextBlock Name="lastName" Text="{Binding Path = User.LastName}"/>

        </StackPanel>

    </Grid>
    
</UserControl>
