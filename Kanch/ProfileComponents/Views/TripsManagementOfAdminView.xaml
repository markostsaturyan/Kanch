                                            <Button Command = "{Binding AcceptTrip}" CommandParameter="{Binding}" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Right" Height="35" Width="100"> 
                                                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold">
                                                    Accept trip
                                                </TextBlock>
