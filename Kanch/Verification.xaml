<Window x:Class="Kanch.Verification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kanch"
        mc:Ignorable="d"
        Title="Verification" Height="250" Width="300" ResizeMode="NoResize">
    <Grid>

        <StackPanel Orientation="Vertical" VerticalAlignment="Center">

            <TextBlock Name="statusMessage" Visibility="Hidden" HorizontalAlignment="Center"></TextBlock>
            <TextBlock  HorizontalAlignment="Center" Margin="-88,0">
                We sent the verification code to your mail<LineBreak/>
                Chack your mail<LineBreak/>
                Entre your verification code
            </TextBlock>
            <TextBox Name="verification" Height="20" Width="70" Margin="10"></TextBox>
            <Button Name="verify" Click="VerifyClick" Height="25" Width="50" >
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Verify</TextBlock>
            </Button>
        </StackPanel>
    </Grid>
</Window>
