<Window x:Class="Kanch.Profile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Kanch.ProfileComponents.ViewModels"
        xmlns:views="clr-namespace:Kanch.ProfileComponents.Views"
        mc:Ignorable="d"
        Title="Profile" Height="Auto" Width="Auto">

    <Window.Resources>

        <DataTemplate x:Key="UserMain">
            <views:UserMain />
        </DataTemplate>

        <DataTemplate x:Key="DriverMain">
            <views:DriverMain />
        </DataTemplate>

        <DataTemplate x:Key="PhotographerMain">
            <views:PhotographerMain/>
        </DataTemplate>

        <DataTemplate x:Key="GuideMain">
            <views:GuideMain />
        </DataTemplate>

        <DataTemplate x:Key="AdminMain">
            <views:AdminMain />
        </DataTemplate>

        <DataTemplate x:Key="CampingTrips">
            <views:CampingTrips />
        </DataTemplate>

        <DataTemplate x:Key="CampingTripsRegistration">
            <views:CampingTrips />
        </DataTemplate>


    </Window.Resources>

    <Grid>

        <Grid Width="180" HorizontalAlignment="Left">

            <ContentPresenter Name="userMainInfoPresenter" Width="180"/>

        </Grid>

        <Grid HorizontalAlignment="Right" Width="575">

            <ContentPresenter Name="mainPage" HorizontalAlignment="Right"/>

        </Grid>
        
    </Grid>

</Window>